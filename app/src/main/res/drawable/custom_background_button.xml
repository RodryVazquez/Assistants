<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/blue400" />
            <stroke
                android:width="1dp"
                android:color="@color/blue300" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/blue700"
                android:endColor="@color/blue700"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/blue700" />

        </shape>
    </item>
</selector>